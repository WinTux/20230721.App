<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_20230721.Pages.SextaPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Multimedia">
    <VerticalStackLayout>
        <Label 
            Text="Video"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <toolkit:MediaElement x:Name="video" WidthRequest="350" HeightRequest="350" Source="embed://ForBiggerBlazes.mp4"
                              ShouldAutoPlay="True" ShouldKeepScreenOn="True" ShouldShowPlaybackControls="True" Aspect="Fill"/>
        <Button x:Name="btn" Text="Play/Pause" HorizontalOptions="Center" Clicked="OnBotonClic"/>

    </VerticalStackLayout>
</ContentPage>